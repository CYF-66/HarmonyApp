<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff">

        <DirectionalLayout
            ohos:id="$+id:dl_left"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:iv_back"
                ohos:height="match_parent"
                ohos:width="30vp"
                ohos:image_src="$media:goback"
                ohos:left_margin="5vp"/>
            <Text
                ohos:id="$+id:tv_back"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text="返回"
                ohos:visibility="hide"
                ohos:text_alignment="vertical_center"
                ohos:text_size="20fp"
                />
        </DirectionalLayout>


        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:horizontal_center="true"
            ohos:orientation="vertical"
            >
            <Text
                ohos:id="$+id:tv_title"
                ohos:height="0vp"
                ohos:width="match_parent"
                ohos:text="title"
                ohos:text_alignment="center"
                ohos:text_color="#767676"
                ohos:text_size="20fp"
                ohos:weight="1"/>
        </DirectionalLayout>

        <Image
            ohos:id="$+id:more_iv"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:image_src="$media:more_icon"
            ohos:right_margin="15vp"
            ohos:visibility="hide"
            ohos:vertical_center="true"/>
        <Image
            ohos:id="$+id:im_share"
            ohos:height="16vp"
            ohos:width="16vp"
            ohos:visibility="hide"
            ohos:image_src="$media:share_icon"
            ohos:left_of="$id:more_iv"
            ohos:right_margin="10vp"
            ohos:vertical_center="true"/>
    </DependentLayout>
    <Button
        ohos:id="$+id:btn_center"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:margin="10vp"
        ohos:background_element="$graphic:button_red"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:text="center"/>
    <Button
        ohos:id="$+id:btn_bottom"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:margin="10vp"
        ohos:background_element="$graphic:button_red"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:text="bottom"/>
    <Button
        ohos:id="$+id:btn_self"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:margin="10vp"
        ohos:background_element="$graphic:button_red"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:text="自定义"/>

</DirectionalLayout>