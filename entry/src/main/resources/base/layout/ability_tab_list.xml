<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp">
        <Text
            ohos:id="$+id:text_back"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="返回"
            ohos:text_alignment="left"
            ohos:text_size="20fp"
            />
        <Text
            ohos:id="$+id:text_title"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:clickable="true"
            ohos:text_alignment="center"
            ohos:text="title"
            ohos:text_size="20fp"
            />
        <Text
            ohos:id="$+id:text_content"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:clickable="true"
            ohos:visibility="invisible"
            ohos:text_alignment="right"
            ohos:text="确定"
            ohos:text_size="20fp"
            />
    </DirectionalLayout>
    <TabList
        ohos:id="$+id:tab_list"
        ohos:top_margin="10vp"
        ohos:tab_margin="24vp"
        ohos:tab_length="140vp"
        ohos:text_size="20fp"
        ohos:clickable="true"
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        ohos:normal_text_color="#999999"
        ohos:selected_text_color="#FF6A6A"
        ohos:selected_tab_indicator_color="#FF6A6A"
        ohos:selected_tab_indicator_height="2vp"/>

</DirectionalLayout>